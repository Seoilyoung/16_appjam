<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Spinner
            android:id="@+id/spin_total"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/people_icon_2"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txt_total_count"
            android:layout_toStartOf="@+id/txt_total_count" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/txt_total_count"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentRight="true"
            android:text="0"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/list_total"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>